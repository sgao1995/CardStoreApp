@model CartViewModel

<h2>Shopping Cart: </h2>
<table class ="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Amount</th>
            <th>Card</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cart.CartItems)
        {
            <tr>
                <td class="text-center">@item.Amount</td>
                <td class="text-left">@item.Card.Name</td>
                <td class="text-right">@item.Card.Price.ToString()</td>
                <td class="text-right">@((item.Amount * item.Card.Price).ToString())</td>
            </tr>

        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total Price:</td>
            <td class="text-right">@Model.CartTotalPrice.ToString()</td>
        </tr>
    </tfoot>
</table>
